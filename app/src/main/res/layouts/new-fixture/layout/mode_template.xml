<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_newFixtureInfo1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL_newFixtureMode"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:hint="@string/nfMode">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ET_fdpManufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL_newFixtureFootprint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:hint="@string/nfFootprint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ET_newFixtureFootprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            tools:ignore="TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/IB_removeMode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:minWidth="32dp"
        android:src="@drawable/ic_baseline_remove"
        app:tint="@color/red_A700"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
</LinearLayout>