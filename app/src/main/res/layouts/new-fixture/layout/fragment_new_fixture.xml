<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".fragments.main.fixture.NewFixtureFragment">

    <LinearLayout
        android:id="@+id/LL_nf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIL_nfName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nfName"
            app:errorEnabled="true"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ET_nfName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIL_nfManufacturer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/nfManufacturer"
            app:startIconDrawable="@drawable/ic_baseline_search"
            app:endIconMode="clear_text"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ET_nfManufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/Divider0"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/LL_nfInfo0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_modeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nfModeInformation"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/LL_nfInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_nfMode"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:hint="@string/nfMode"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ET_nfMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textShortMessage" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_nfFootprint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="@string/nfFootprint"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ET_nfFootprint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/IB_newMode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_add"
                    app:tint="@color/green_A700"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/Divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TV_powerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nfPowerInformation"
            android:textAlignment="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIL_nfPowerConsumption"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nfPowerConsumption"
            app:errorEnabled="true"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ET_nfPowerConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/Divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/LL_nfInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/LL_nfInfo2.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_nfType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfTypeSelection" />

                <CheckBox
                    android:id="@+id/CB_spot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfType_spot" />

                <CheckBox
                    android:id="@+id/CB_wash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfType_wash" />

                <CheckBox
                    android:id="@+id/CB_beam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfType_beam" />

                <CheckBox
                    android:id="@+id/CB_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfType_profile" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_nfInfo2.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_nfLampType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nfLampTypeSelection" />

                <RadioGroup
                    android:id="@+id/RG_lampType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/RB_discharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_discharge" />

                    <RadioButton
                        android:id="@+id/RB_led"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_led" />

                    <RadioButton
                        android:id="@+id/RB_laser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_laser" />

                    <RadioButton
                        android:id="@+id/RB_incandescent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_incandescent" />

                    <RadioButton
                        android:id="@+id/RB_halogen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_halogen" />

                    <RadioButton
                        android:id="@+id/RB_fluorescent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nfLampType_fluorescent" />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/Divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/TV_zoomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nfZoomInfo"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/LL_nfInfo3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/LL_nfInfo3.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_minZoom"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nfMinZoom"
                    android:layout_marginEnd="8dp"
                    app:errorEnabled="true"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ET_minZoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_nfInfo3.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_maxZoom"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nfMaxZoom"
                    android:layout_marginStart="8dp"
                    app:errorEnabled="true"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ET_maxZoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B_nfValidateParam"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:enabled="false"
                android:text="@string/nfValidate" />

            <Button
                android:id="@+id/B_nfSaveFixture"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/nfSave" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>